<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kdedevelop.mediani.adapter.out.tag.mybatis.TagMyBatisRepository">
    <resultMap id="tagResultMap" type="TagMyBatisEntity">
        <id property="id" column="tag_id"/>
        <result property="name" column="tag_name"/>
    </resultMap>

    <!-- CREATE -->
    <insert id="create" parameterType="TagMyBatisEntity">
        INSERT INTO `tag` (id, name)
        VALUES (#{tag.id}, #{tag.name})
    </insert>

    <!-- READ by ID -->
    <select id="readById" resultMap="tagResultMap" parameterType="long">
        SELECT id as tag_id, name as tag_name
        FROM `tag`
        WHERE id = #{id}
    </select>

    <!-- READ by NAME -->
    <select id="readByName" resultMap="tagResultMap" parameterType="String">
        SELECT id as tag_id, name as tag_name
        FROM `tag`
        WHERE name LIKE #{name}
    </select>

    <!-- READ first by order desc -->
    <select id="readFirstByOrderByIdDesc" resultMap="tagResultMap">
        SELECT id as tag_id, name as tag_name
        FROM `tag`
        ORDER BY id DESC
            LIMIT 1
    </select>

    <!-- READ by name containing with pageable -->
    <select id="readByNameContaining" resultMap="tagResultMap">
        SELECT id as tag_id, name as tag_name
        FROM `tag`
        WHERE name LIKE CONCAT('%', #{name}, '%')
        ORDER BY id
        <if test="page != null">
            LIMIT #{page.pageSize} OFFSET #{page.offset}
        </if>
    </select>

    <!-- COUNT all -->
    <select id="countAll" resultType="long">
        SELECT COUNT(*)
        FROM `tag`
    </select>

    <!-- UPDATE -->
    <update id="update" parameterType="TagMyBatisEntity">
        UPDATE `tag`
        SET name = #{tag.name}
        WHERE id = #{tag.id}
    </update>

    <!-- DELETE -->
    <delete id="delete" parameterType="long">
        DELETE FROM `tag`
        WHERE id = #{id}
    </delete>
</mapper>